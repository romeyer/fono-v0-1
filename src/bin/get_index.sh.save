#!/bin/bash -e

set -e

echo ${@}

option=true
query_string=""
for arg in "${@}" ; do
  if $option ; then
    query_string="$query_string""${arg}="
    option=false
  else
    if [[ "${arg}" =~ "-" ]] ; then
      query_string="$query_string""blank&${arg}="
    else
      query_string="$query_string""${arg}&"
      option=true
    fi
  fi
done

echo "${query_string::-1}" | tr -d '-'
